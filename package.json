{
  "name": "best-behavior",
  "version": "1.0.0",
  "description": "Runner for esbehavior behaviors",
  "main": "index.js",
  "bin": {
    "behave": "./bin/index.js"
  },
  "scripts": {
    "build": "rm -rf dist && npm run build:runner && npm run build:adapter",
    "build:runner": "tsc --build",
    "build:adapter": "node ./scripts/build.js",
    "dev": "./bin/index.js --behaviors './test/fixtures/**/*.behavior.ts'",
    "test": "npm run build:adapter && ts-node --swc --esm ./test/runner.ts"
  },
  "type": "module",
  "author": "Brian Watkins",
  "license": "MIT",
  "devDependencies": {
    "@swc/core": "^1.3.94",
    "@types/firstline": "^2.0.3",
    "@types/yargs": "^17.0.29",
    "great-expectations": "^1.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "acorn": "^8.11.2",
    "acorn-walk": "^8.3.0",
    "firstline": "^2.0.2",
    "glob": "^10.3.10",
    "playwright": "^1.39.0",
    "source-map-support": "^0.5.21",
    "vite": "^4.5.0",
    "yargs": "^17.7.2"
  },
  "peerDependencies": {
    "esbehavior": "^4.2.2"
  }
}
