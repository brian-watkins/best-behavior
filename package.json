{
  "name": "best-behavior",
  "version": "0.0.0",
  "description": "Runner for esbehavior behaviors",
  "main": "./dist/runner/index.js",
  "exports": "./dist/runner/index.js",
  "bin": {
    "best": "./bin/index.js"
  },
  "type": "module",
  "author": "Brian Watkins",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && npm run build:all",
    "build:runner": "tsc --build",
    "build:adapter": "node ./scripts/build.js",
    "build:all": "npm run build:runner && npm run build:adapter",
    "dev": "./bin/index.js --behaviors './test/fixtures/**/valid/*.behavior.ts' --runInBrowser '**/browser/**/*'",
    "test": "npm run build:all && ts-node --swc --esm ./test/runner.ts",
    "create:change": "changeset",
    "create:version": "changeset version",
    "create:release": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@swc/core": "^1.3.94",
    "@types/firstline": "^2.0.3",
    "@types/yargs": "^17.0.29",
    "great-expectations": "^1.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "acorn": "^8.11.2",
    "acorn-walk": "^8.3.0",
    "glob": "^10.3.10",
    "minimatch": "^9.0.3",
    "source-map-support": "^0.5.21",
    "yargs": "^17.7.2"
  },
  "peerDependencies": {
    "esbehavior": "^4.2.2",
    "playwright": "^1.40.0",
    "vite": "^5.0.0"
  }
}
